@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";

}

<img src="~/Areas/Administrator/img/admin_s.png" alt="admin" />


<h2>جزئیات</h2>

<div>
    <h4>سطح دسترسی</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           @Html.Label("سطح دسترسی")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<h4>لیست کاربران دارای این سطح</h4>
@if (ViewBag.UserCount == 0)
{
    <hr />
    <p>برای این نقش کاربری یافت نگردید.</p>
}

<table class="table">

    @foreach (var item in ViewBag.Users)
    {
        <tr>
            <td>
                @item.UserName
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("ویرایش ", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("بازگشت", "Index")
</p>



